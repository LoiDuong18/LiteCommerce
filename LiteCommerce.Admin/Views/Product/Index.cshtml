
@{
    ViewBag.Title = "Manage Products";

}
<!-- Search box -->
<div class="box box-primary">
    <!-- form start -->
    <form role="form">
        <div class="box-body">
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Key search:</label>
                        <input type="text" class="form-control" placeholder="Product">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Category:</label>
                        <select class="form-control">
                            <option>--Select Category--</option>
                            <option>option 2</option>
                            <option>option 3</option>
                            <option>option 4</option>
                            <option>option 5</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Supplier:</label>
                        <select class="form-control">
                            <option>--Select Supplier--</option>
                            <option>option 2</option>
                            <option>option 3</option>
                            <option>option 4</option>
                            <option>option 5</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Min price:</label>
                        <input type="number" class="form-control" placeholder="0" min="0">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Max price:</label>
                        <input type="number" class="form-control" placeholder="0" min="0">
                    </div>
                </div>
                <div class="col-sm-4">
                    <label>Press to search</label>
                    <button class="btn btn-primary btn-block">Search</button>
                </div>               
            </div>
        </div>
        <!-- /.box-body -->
    </form>
</div>
<!-- /.box -->
<div class="row">
    <div class="col-sm-8">
        <span>There are <b>1,000</b> Products. Page <b>1/100</b></span>
    </div>
    <div class="col-sm-4">
        <div class="pull-right">
            <a href="~/Product/Input" class="btn btn-sm btn-primary"><i class="fa fa-plus-circle"></i> Add</a>
            <button class="btn btn-sm btn-danger"><i class="fa fa-trash-o"></i> Delete</button>
        </div>
    </div>
</div>
<br />
<!-- Table box -->
<div class="box box-success">
    <div class="box-body">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th><input type="checkbox" /></th>
                    <th>#</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 1; i <= 4; i++)
                {
                    <tr>
                        <td>
                            <input type="checkbox" />
                        </td>
                        <td>@i</td>
                        <td>
                            <img src=""/>
                        </td>
                        <td>
                            <span style="display:block">Mì Hảo Hảo</span>
                            <span>(Vina Acecook)</span>
                        </td>
                        <td>
                            <span style="display:block">Thức ăn</span>
                        </td>
                        <td><span>30</span></td>
                        <td><span>150.000đ</span></td>
                        <td><span>Chất lượng Nhật Bản cho bữa ăn ngon</span></td>
                        <td><a href="~/Product/Input/@i" class="btn btn-primary"><i class="fa fa-pencil"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="box-footer clearfix">
        <ul class="pagination pagination-sm no-margin pull-right">
            <li><a href="#">«</a></li>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">»</a></li>
        </ul>
    </div>
    <!-- /.box-body -->
</div>
<!-- /.box -->
