@model LiteCommerce.DomainModels.Product
<div class="box box-primary">
    <!-- form start -->
    <form role="form" action="~/Product/Input" method="post" enctype="multipart/form-data">
        <div class="box-header with-border">
            <div class="box-tools pull-right">
                <a href="~/Product" class="btn btn-primary">
                    <i class="fa fa-long-arrow-left"></i> Back
                </a>
            </div>
        </div>
        <input type="hidden" name="ProductID" value="@Model.ProductID" />
        <div class="box-body">
            <div class="form-group">
                <label>Product Name:</label>
                <input type="text" class="form-control" placeholder="Nước abc" name="ProductName" value="@Model.ProductName">
                @Html.ValidationMessage("ProductName", new { @style = "color: red" })
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Supplier:</label>
                        <select class="form-control" id="select2" name="SupplierID">
                            @foreach (var item in SelectListHelper.ListOfSuppliers())
                            {
                                if (item.Value == Convert.ToString(Model.SupplierID))
                                {
                                    <option value="@item.Value" selected>@item.Text</option>
                                }
                                else
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }

                            }
                        </select>
                        @Html.ValidationMessage("SupplierID", new { @style = "color: red" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Category:</label>
                        <select class="form-control" id="select22" name="CategoryID">
                            @foreach (var item in SelectListHelper.ListOfCategories())
                            {
                                if (item.Value == Convert.ToString(Model.CategoryID))
                                {
                                    <option value="@item.Value" selected>@item.Text</option>
                                }
                                else
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                        @Html.ValidationMessage("CategoryID", new { @style = "color: red" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Quantity per unit:</label>
                        <input type="text" name="QuantityPerUnit" class="form-control" placeholder="0" value="@Model.QuantityPerUnit">
                        @Html.ValidationMessage("QuantityPerUnit", new { @style = "color: red" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Price:</label>
                        <input type="number" name="UnitPrice" class="form-control" placeholder="0" value="@Model.UnitPrice">
                        @Html.ValidationMessage("UnitPrice", new { @style = "color: red" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Description:</label>
                <textarea class="form-control" name="Description">@Model.Descriptions</textarea>
            </div>
            <div class="form-group">
                <label>Product's Photo:</label>
                <input type="file" name="PhotoPath" class="form-control" accept="image/*">
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" id="ButtonSubmit" class="btn btn-primary btn-sm">
                    <i class="fa fa-check"></i> @ViewBag.ConfirmButton
                </button>
                <a href="~/Product" class="btn btn-default btn-sm">
                    <i class="fa fa-times"></i> Cancel
                </a>
            </div>
        </div>
    </form>
</div>