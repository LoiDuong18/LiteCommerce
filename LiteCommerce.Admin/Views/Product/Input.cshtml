<div class="box box-primary">
    <!-- form start -->
    <form role="form">
        <div class="box-header with-border">
            <div class="box-tools pull-right">
                <a href="~/Product" class="btn btn-primary">
                    <i class="fa fa-long-arrow-left"></i> Back
                </a>
            </div>
        </div>
        <div class="box-body">
            <div class="form-group">
                <label>Product Name:</label>
                <input type="text" class="form-control" placeholder="Nước abc">
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Supplier:</label>
                        <select class="form-control">
                            <option>--Select Supplier--</option>
                            <option>option 2</option>
                            <option>option 3</option>
                            <option>option 4</option>
                            <option>option 5</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Category:</label>
                        <select class="form-control">
                            <option>--Select Category--</option>
                            <option>option 2</option>
                            <option>option 3</option>
                            <option>option 4</option>
                            <option>option 5</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Quantity per unit:</label>
                        <input type="number" class="form-control" placeholder="0">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Price:</label>
                        <input type="number" class="form-control" placeholder="0">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Description:</label>
                <textarea class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label>Product's Photo:</label>
                <input type="file" class="form-control">
            </div>
            <label>Product Attributes</label>
            <div id="input_fields">
                
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" id="ButtonSubmit" class="btn btn-primary btn-sm">
                    <i class="fa fa-check"></i> @ViewBag.ConfirmButton
                </button>
                <a href="~/Product" class="btn btn-default btn-sm">
                    <i class="fa fa-times"></i> Cancel
                </a>
            </div>
        </div>
    </form>
</div>