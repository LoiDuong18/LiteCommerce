
@{
    ViewBag.Title = "Change Password";
}

<!-- Input box -->
<div class="box box-primary">
    <!-- form start -->
    <form role="form">
        <div class="box-body">
            <div class="form-group">
                <label>Old Password:</label>
                <input type="password" class="form-control">
            </div>
            <div class="form-group">
                <label>New Password:</label>
                <input type="password" class="form-control">
            </div>
            <div class="form-group">
                <label>Confirm New Password:</label>
                <input type="password" class="form-control">
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" id="ButtonSubmit" class="btn btn-primary btn-sm"><i class="fa fa-check"></i> Save</button>
            <a href="~/Category" class="btn btn-default btn-sm"><i class="fa fa-times"></i> Cancel</a>
        </div>
    </form>
</div>
<!-- /.box -->
