
@{
    ViewBag.Title = "Change Password";
}

<!-- Input box -->
<div class="box box-primary">
    <!-- form start -->
    <form action="~/Account/ChangePwd" method="post" role="form">
        <div class="box-body">
            <div class="form-group">
                <label>Old Password:</label>
                <input type="password" name="oldPassword" value="@ViewBag.OldPassword" class="form-control">
                @Html.ValidationMessage("OldPassword", new { @style = "color: red" })
            </div>
            <div class="form-group">
                <label>New Password:</label>
                <input type="password" name="newPassword" value="@ViewBag.NewPassword" class="form-control">
                @Html.ValidationMessage("NewPassword", new { @style = "color: red" })
            </div>
            <div class="form-group">
                <label>Confirm New Password:</label>
                <input type="password" name="reNewPassword" value="@ViewBag.ReNewPassword" class="form-control">
                @Html.ValidationMessage("ReNewPassword", new { @style = "color: red" })
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" id="ButtonSubmit" class="btn btn-primary btn-sm"><i class="fa fa-check"></i> Save</button>
            <a href="~/" class="btn btn-default btn-sm"><i class="fa fa-times"></i> Cancel</a>
        </div>
    </form>
</div>
<!-- /.box -->
