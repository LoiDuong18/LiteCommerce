@model LiteCommerce.DomainModels.Employee
@{ 
    ViewBag.Title = "User Profile";
}
<div class="row">
    <div class="col-md-3">

        <!-- Profile Image -->
        <div class="box box-primary">
            <div class="box-body box-profile">
                <img class="profile-user-img img-responsive img-circle" src="@Model.PhotoPath" alt="User profile picture">

                <h3 class="profile-username text-center">@Model.LastName @Model.FirstName</h3>

                <p class="text-muted text-center">@Model.Title</p>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
    <div class="col-md-9">
        <!-- Horizontal Form -->
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Information</h3>
                <div class="box-tools pull-right">
                    <a href="~/Account/Edit" class="btn btn-primary btn-sm"><i class="fa fa-pencil"></i> Edit</a>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <form class="form-horizontal">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="inputFullName" class="col-sm-4 text-right">Full Name:</label>
                                <div class="col-sm-8">
                                    <span>@Model.LastName @Model.FirstName</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="inputTitle" class="col-sm-4 text-right">Title:</label>
                                <div class="col-sm-8">
                                    <span>@Model.Title</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="inputBirthday" class="col-sm-4 text-right">Birthday:</label>
                                <div class="col-sm-8">
                                    <span>@string.Format("{0:dd/MM/yyyy}", Model.BirthDate)</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="inputHireDay" class="col-sm-4 text-right">HireDay:</label>
                                <div class="col-sm-8">
                                    <span>@string.Format("{0:dd/MM/yyyy}", Model.HireDate)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="inputEmail" class="col-sm-4 text-right">Email:</label>
                                <div class="col-sm-8">
                                    <span>@Model.Email</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="inputPhone" class="col-sm-4 text-right">Phone:</label>
                                <div class="col-sm-8">
                                    <span>@Model.HomePhone</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputCity" class="col-sm-2 text-right">Address:</label>
                        <div class="col-sm-10">
                            <span>@Model.Address, @Model.City - @Model.Country</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputNotes" class="col-sm-2 text-right">Notes:</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="7" readonly>@Model.Notes</textarea>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>