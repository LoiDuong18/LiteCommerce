@model LiteCommerce.Admin.Models.CategoryResult
@{
    ViewBag.Title = "Manage Categories";
    int i = 0;
}
<!-- Search box -->
<div class="box box-primary">
    <!-- form start -->
    <form role="form">
        <div class="box-body">
            <div class="input-group input-group-sm">
                <input type="text" class="form-control" placeholder="Type anything">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-primary btn-flat"><i class="fa fa-search"></i></button>
                </span>
            </div>
        </div>
        <!-- /.box-body -->
    </form>
</div>
<form action="~/Category/Delete" method="POST">
    <!-- /.box -->
    <div class="row">
        <div class="col-sm-8">
            <span>There are <b>@Model.RowCount</b> Categories</span>
        </div>
        <div class="col-sm-4">
            <div class="pull-right">
                <a href="~/Category/Input" class="btn btn-sm btn-success"><i class="fa fa-plus-circle"></i> Add</a>
                <button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-trash-o"></i> Delete</button>
            </div>
        </div>
    </div>
    <br />
    <!-- Table box -->
    <div class="box box-success">
        <div class="box-body">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAll"/></th>
                        <th>#</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="categoryIDs" value="@item.CategoryID" />
                            </td>
                            <td>@(++i)</td>
                            <td>
                                <span class="text-bold text-blue">@item.CategoryName</span>
                            </td>
                            <td>
                                <span style="display:block">@item.Description</span>
                            </td>
                            <td><a href="~/Category/Input/@item.CategoryID" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</form>
