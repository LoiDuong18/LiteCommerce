@model LiteCommerce.DomainModels.Category
@{

}

<!-- Input box -->
<div class="box box-primary">
    <!-- form start -->
    <form role="form" action="~/Category/Input" method="POST">
        <div class="box-header with-border">
            <div class="box-tools pull-right">
                <a href="~/Category" class="btn btn-primary"><i class="fa fa-long-arrow-left"></i> Back</a>
            </div>
        </div>
        <div class="box-body">
            <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
            <div class="form-group">
                <label>Category Name:</label>
                <input type="text" name="CategoryName" class="form-control" placeholder="Category" value="@Model.CategoryName">
                @Html.ValidationMessage("CategoryName", new { @style = "color: red" })
            </div>
            <div class="form-group">
                <label>Description:</label>
                <textarea name="Description" class="form-control">@Model.Description</textarea>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" id="ButtonSubmit" class="btn btn-primary btn-sm"><i class="fa fa-check"></i> @ViewBag.ConfirmButton</button>
            <a href="~/Category" class="btn btn-default btn-sm"><i class="fa fa-times"></i> Cancel</a>
        </div>
    </form>
</div>
<!-- /.box -->