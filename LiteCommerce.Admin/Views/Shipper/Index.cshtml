@model LiteCommerce.Admin.Models.ShipperPaginationResult
@{
    ViewBag.Title = "Manage Shippers";
    int i = 0;
}
<!-- Search box -->
<div class="box box-primary">
    <!-- form start -->
    <form role="form" action="~/Shipper" method="get">
        <div class="box-body">
            <div class="input-group input-group-sm">
                <input type="text" name="searchValue" class="form-control" placeholder="Type anything" value="@Model.SearchValue">
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-primary btn-flat"><i class="fa fa-search"></i></button>
                </span>
            </div>
        </div>     
        <!-- /.box-body -->
    </form>
</div>
<!-- /.box -->
<form action="~/Shipper/Delete" method="post">
    <div class="row">
        <div class="col-sm-8">
            <span>There are <b>@Model.RowCount</b> Shippers. Page <b>1</b></span>
        </div>
        <div class="col-sm-4">
            <div class="pull-right">
                <a href="~/Shipper/Input" class="btn btn-sm btn-primary"><i class="fa fa-plus-circle"></i> Add</a>
                <button class="btn btn-sm btn-danger"><i class="fa fa-trash-o"></i> Delete</button>
            </div>
        </div>
    </div>
    <br />
    <!-- Table box -->
    <div class="box box-success">
        <div class="box-body">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" /></th>
                        <th>#</th>
                        <th>Name</th>
                        <th>Contact Info</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="shipperIDs" value="@item.ShipperID" />
                            </td>
                            <td>@((Model.Page - 1) * Model.PageSize + (++i))</td>
                            <td>
                                <span class="text-bold text-blue">>@item.CompanyName</span>
                            </td>
                            <td>
                                <span style="display:block"><i class="fa fa-phone"></i> @item.Phone</span>
                            </td>
                            <td><a href="~/Shipper/Input/@item.ShipperID" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</form>