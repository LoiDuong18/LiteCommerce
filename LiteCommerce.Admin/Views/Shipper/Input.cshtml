@model LiteCommerce.DomainModels.Shipper
@{

}

<!-- Input box -->
<div class="box box-primary">
    <!-- form start -->
    <form role="form" action="~/Shipper/Input" method="post">
        <div class="box-header with-border">
            <div class="box-tools pull-right">
                <a href="~/Shipper" class="btn btn-primary"><i class="fa fa-long-arrow-left"></i> Back</a>
            </div>
        </div>
        <div class="box-body">
            <input type="hidden" name="ShipperID" value="@Model.ShipperID" />
            <div class="form-group">
                <label>Company Name:</label>
                <input type="text" name="CompanyName" class="form-control" placeholder="ABC Company" value="@Model.CompanyName">
                @Html.ValidationMessage("CompanyName", new { @style = "color: red" })
            </div>
            <div class="form-group">
                <label>Phone:</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                    <input type="text" name="Phone" class="form-control" placeholder="(+84) 123 123 123" value="@Model.Phone">
                </div>
                @Html.ValidationMessage("Phone", new { @style = "color: red" })
            </div>          
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" id="ButtonSubmit" class="btn btn-primary btn-sm"><i class="fa fa-check"></i> @ViewBag.ConfirmButton</button>
            <a href="~/Shipper" class="btn btn-default btn-sm"><i class="fa fa-times"></i> Cancel</a>
        </div>
    </form>
</div>
<!-- /.box -->