@model LiteCommerce.DomainModels.Supplier
@{

}

<!-- Input box -->
<div class="box box-primary">
    <!-- form start -->
    <form role="form">
        <div class="box-header with-border">
            <div class="box-tools pull-right">
                <a href="~/Supplier" class="btn btn-primary"><i class="fa fa-long-arrow-left"></i> Back</a>
            </div>
        </div>
        <div class="box-body">
            <div class="form-group">
                <label>Supplier ID:</label>
                <input type="text" class="form-control" placeholder="SupplierID ..." value="@Model.SupplierID">
            </div>
            <div class="form-group">
                <label>Company Name:</label>
                <input type="text" class="form-control" placeholder="Company Name ..." value="@Model.CompanyName">                
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Contact Name:</label>
                        <input type="text" class="form-control" placeholder="Contact Name ..." value="@Model.ContactName">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Contact Title:</label>
                        <input type="text" class="form-control" placeholder="Contact title ..." value="@Model.ContactTitle">
                    </div>
                </div>
            </div>
            
            
            <div class="form-group">
                <label>Address:</label>
                <input type="text" class="form-control" placeholder="Address ..." value="@Model.Address">
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Country:</label>
                        <input type="text" class="form-control" placeholder="Address ..." value="@Model.Country">
                        <select class="form-control">
                            @foreach (var item in SelectListHelper.ListOfCountries())
                            {
                                if (item.Value == Model.Country)
                                {
                                    <option value="@item.Value" checked>@item.Text</option>
                                }
                                else
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>City:</label>
                        <input type="text" class="form-control" placeholder="City ..." value="@Model.City">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Phone:</label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                            <input type="text" class="form-control" placeholder="Phone ..." value="@Model.Phone">
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Fax:</label>
                        <div class="input-group">                            
                            <span class="input-group-addon"><i class="fa fa-fax"></i></span>
                            <input type="text" class="form-control" placeholder="Fax ..." value="@Model.Fax">
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label>Home Page:</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-link"></i></span>
                        <input type="text" class="form-control" placeholder="Home Page ..." value="@Model.HomePage">
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" id="ButtonSubmit" class="btn btn-primary btn-sm"><i class="fa fa-check"></i> @ViewBag.ConfirmButton</button>
            <a href="~/Supplier" class="btn btn-default btn-sm"><i class="fa fa-times"></i> Cancel</a>            
        </div>
    </form>
</div>
<!-- /.box -->