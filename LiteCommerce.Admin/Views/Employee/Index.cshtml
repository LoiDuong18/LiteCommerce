@model LiteCommerce.Admin.Models.EmployeePaginationResult
@{
    ViewBag.Title = "Manage Employees";
    int i = 0;
    string paramSearch = "&searchValue=" + Model.SearchValue;
}
<!-- Search box -->
<div class="box box-primary">
    <!-- form start -->
    <form role="form">
        <div class="box-body">
            <div class="input-group input-group-sm">
                <input type="text" class="form-control" placeholder="Type anything">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-primary btn-flat"><i class="fa fa-search"></i></button>
                </span>
            </div>
        </div>
        <!-- /.box-body -->
    </form>
</div>
<!-- /.box -->
<div class="row">
    <div class="col-sm-8">
        <span>There are <b>@Model.RowCount</b> Employees. Page <b>@Model.Page/@Model.PageCount</b></span> 
    </div>
    <div class="col-sm-4">
        <div class="pull-right">
            <a href="~/Employee/Input" class="btn btn-sm btn-success"><i class="fa fa-plus-circle"></i> Add</a>
            <button class="btn btn-sm btn-danger"><i class="fa fa-trash-o"></i> Delete</button>
        </div>
    </div>
</div>
<br />
<!-- Table box -->
<div class="box box-success">
    <div class="box-body">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th><input type="checkbox" /></th>
                    <th>#</th>
                    <th>Name</th>
                    <th>Birthday</th>
                    <th>HireDate</th>
                    <th>Contact Info</th>
                    <th>Address</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>
                            <input type="checkbox" />
                        </td>
                        <td>@((Model.Page - 1) * Model.PageSize + (++i))</td>
                        <td>
                            <div class="row">
                                <div class="col-sm-3">
                                    @if (string.IsNullOrEmpty(item.PhotoPath))
                                    {
                                        <img src="~/Images/avt-facebook.jpg" width="50px" class="img-circle" />
                                    }
                                    else
                                    {
                                        <img src="@item.PhotoPath" width="50px" class="img-circle" />
                                    }
                                </div>
                                <div class="col-sm-9">
                                    <span class="text-bold text-black">@item.FirstName @item.LastName</span>
                                    <br />
                                    <span>(@item.Title)</span>
                                </div>
                            </div>
                            
                        </td>
                        <td>
                            <span>@string.Format("{0:dd/MM/yyyy}", item.BirthDate)</span>
                        </td>
                        <td>
                            <span> @string.Format("{0:dd/MM/yyyy}", item.HireDate)</span>
                        </td>
                        <td>
                            <span style="display:block"><i class="fa fa-phone"></i> @item.HomePhone</span>
                            <span style="display:block"><i class="fa fa-envelope"></i> @item.Email</span>
                        </td>
                        <td>
                            <span style="display:block">@item.Address</span>
                            <span> @item.City -  @item.Country</span>
                        </td>
                        <td><a href="~/Employee/Input/@item.EmployeeID" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="box-footer clearfix">
        <ul class="pagination pagination-sm no-margin pull-right">
            @if (Model.Page != 1)
            {
                <li><a href="~/Employee?page=1@paramSearch">First</a></li>
            }
            @for (int page = 1; page <= Model.PageCount; page++)
            {
                if (Model.Page == page)
                {
                    <li class="active"><a href="~/Employee?page=@page@paramSearch">@page</a></li>
                }
                else
                {
                    <li><a href="~/Employee?page=@page@paramSearch">@page</a></li>
                }

            }
            @if (Model.Page != Model.PageCount)
            {
                <li><a href="~/Employee?page=@Model.PageCount@paramSearch">Last</a></li>
            }     
        </ul>
    </div>
    <!-- /.box-body -->
</div>
<!-- /.box -->
