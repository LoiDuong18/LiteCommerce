@model LiteCommerce.DomainModels.Employee
@{

}

<!-- Input box -->
<div class="box box-primary">
    <!-- form start -->
    <form role="form">
        <div class="box-header with-border">
            <div class="box-tools pull-right">
                <a href="~/Employee" class="btn btn-primary"><i class="fa fa-long-arrow-left"></i> Back</a>
            </div>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="form-group">
                    <label>Employee ID:</label>
                    <input type="text" class="form-control" placeholder="SupplierID ..." value="@Model.EmployeeID">
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>First Name:</label>
                        <input type="text" class="form-control" placeholder="A" value="@Model.FirstName">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Last Name:</label>
                        <input type="text" class="form-control" placeholder="Nguyen Van" value="@Model.LastName">
                    </div>
                </div>
            </div>


            <div class="form-group">
                <label>Title:</label>
                <input type="text" class="form-control" placeholder="Sale" value="@Model.Title">
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Birthday:</label>
                        <div class="input-group date">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input type="text" class="form-control pull-right" id="datepicker_birthday" value="@Model.BirthDate">
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Hireday:</label>

                        <div class="input-group date">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input type="text" class="form-control pull-right" id="datepicker_hireday" value="@Model.HireDate">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Home Phone:</label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                            <input type="text" class="form-control" placeholder="(+84) 5555 55 55" value="@Model.HomePhone">
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Email:</label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                            <input type="text" class="form-control" placeholder="admin@abc.com" value="@Model.Email">
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Address:</label>
                <input type="text" class="form-control" placeholder="77 Nguyễn Huệ" value="@Model.Address">
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Country:</label>
                        <select class="form-control">
                            @foreach (var item in SelectListHelper.ListOfCountries())
                            {
                                if (item.Value == Model.Country)
                                {
                                    <option value="@item.Value" checked>@item.Text</option>
                                }
                                else
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>City:</label>
                        <input type="text" class="form-control" placeholder="Hue" value="@Model.City">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Note:</label>
                <input type="text" class="form-control" placeholder="Hue" value="@Model.Notes">
                <textarea class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label>Profile Picture:</label>
                <input type="file" class="form-control">
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" id="ButtonSubmit" class="btn btn-primary btn-sm"><i class="fa fa-check"></i> @ViewBag.ConfirmButton</button>
            <a href="~/Employee" class="btn btn-default btn-sm"><i class="fa fa-times"></i> Cancel</a>
        </div>

    </form>
</div>
<!-- /.box -->